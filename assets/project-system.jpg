<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="800" height="500" fill="#fafafa"/>

  <!-- Grid pattern -->
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#e5e5e5" stroke-width="1"/>
    </pattern>
  </defs>
  <rect width="800" height="500" fill="url(#grid)"/>

  <!-- Component showcase layout -->
  <!-- Sidebar -->
  <rect x="50" y="60" width="180" height="380" rx="8" fill="white" stroke="#e5e5e5" stroke-width="1" filter="drop-shadow(0 4px 6px rgba(0,0,0,0.05))"/>

  <!-- Sidebar items -->
  <rect x="70" y="80" width="140" height="30" rx="4" fill="#0f172a"/>
  <rect x="70" y="120" width="140" height="30" rx="4" fill="#f5f5f5"/>
  <rect x="70" y="160" width="140" height="30" rx="4" fill="#f5f5f5"/>
  <rect x="70" y="200" width="140" height="30" rx="4" fill="#f5f5f5"/>
  <rect x="70" y="240" width="140" height="30" rx="4" fill="#f5f5f5"/>

  <!-- Main content area -->
  <rect x="260" y="60" width="490" height="380" rx="8" fill="white" stroke="#e5e5e5" stroke-width="1" filter="drop-shadow(0 4px 6px rgba(0,0,0,0.05))"/>

  <!-- Content header -->
  <text x="285" y="95" font-family="system-ui, sans-serif" font-size="20" font-weight="700" fill="#171717">Button Components</text>
  <rect x="285" y="110" width="100" height="2" fill="#f97316"/>

  <!-- Button examples -->
  <g transform="translate(285, 140)">
    <!-- Primary button -->
    <rect x="0" y="0" width="120" height="40" rx="6" fill="#0f172a"/>
    <text x="60" y="25" font-family="system-ui, sans-serif" font-size="14" font-weight="600" fill="white" text-anchor="middle">Primary</text>

    <!-- Secondary button -->
    <rect x="140" y="0" width="120" height="40" rx="6" fill="transparent" stroke="#0f172a" stroke-width="2"/>
    <text x="200" y="25" font-family="system-ui, sans-serif" font-size="14" font-weight="600" fill="#0f172a" text-anchor="middle">Secondary</text>

    <!-- Accent button -->
    <rect x="280" y="0" width="120" height="40" rx="6" fill="#f97316"/>
    <text x="340" y="25" font-family="system-ui, sans-serif" font-size="14" font-weight="600" fill="white" text-anchor="middle">Accent</text>
  </g>

  <!-- Color palette -->
  <text x="285" y="215" font-family="system-ui, sans-serif" font-size="16" font-weight="600" fill="#171717">Color System</text>

  <g transform="translate(285, 230)">
    <circle cx="20" cy="20" r="18" fill="#0f172a"/>
    <circle cx="70" cy="20" r="18" fill="#f97316"/>
    <circle cx="120" cy="20" r="18" fill="#fafafa" stroke="#e5e5e5" stroke-width="2"/>
    <circle cx="170" cy="20" r="18" fill="#737373"/>
    <circle cx="220" cy="20" r="18" fill="#171717"/>
  </g>

  <!-- Typography scale -->
  <text x="285" y="295" font-family="system-ui, sans-serif" font-size="16" font-weight="600" fill="#171717">Typography</text>

  <text x="285" y="325" font-family="system-ui, sans-serif" font-size="24" font-weight="700" fill="#171717">Heading 1</text>
  <text x="285" y="350" font-family="system-ui, sans-serif" font-size="18" font-weight="600" fill="#171717">Heading 2</text>
  <text x="285" y="370" font-family="system-ui, sans-serif" font-size="14" fill="#525252">Body text for content</text>

  <!-- Spacing indicators -->
  <rect x="550" y="140" width="160" height="40" rx="6" fill="#f5f5f5" stroke="#f97316" stroke-width="2" stroke-dasharray="4 4"/>
  <text x="630" y="165" font-family="system-ui, sans-serif" font-size="11" fill="#737373" text-anchor="middle">16px spacing</text>

  <rect x="550" y="200" width="160" height="60" rx="6" fill="#f5f5f5" stroke="#f97316" stroke-width="2" stroke-dasharray="4 4"/>
  <text x="630" y="235" font-family="system-ui, sans-serif" font-size="11" fill="#737373" text-anchor="middle">24px spacing</text>

  <!-- Component library badge -->
  <rect x="550" y="285" width="160" height="100" rx="8" fill="#0f172a"/>
  <text x="630" y="320" font-family="system-ui, sans-serif" font-size="32" font-weight="700" fill="#f97316" text-anchor="middle">DS</text>
  <text x="630" y="340" font-family="system-ui, sans-serif" font-size="11" fill="#94a3b8" text-anchor="middle">v2.0</text>
  <text x="630" y="365" font-family="system-ui, sans-serif" font-size="9" fill="#64748b" text-anchor="middle">120+ Components</text>

  <!-- Text overlay -->
  <text x="400" y="470" font-family="system-ui, sans-serif" font-size="24" font-weight="700" fill="#171717" text-anchor="middle">Design System</text>
  <text x="400" y="490" font-family="system-ui, sans-serif" font-size="14" fill="#737373" text-anchor="middle">System · Component Library · 2025</text>
</svg>
