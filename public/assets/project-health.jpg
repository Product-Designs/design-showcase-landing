<svg width="800" height="500" viewBox="0 0 800 500" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="healthBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#334155;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e293b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="cardGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f97316;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#f97316;stop-opacity:0.05" />
    </linearGradient>
  </defs>
  <rect width="800" height="500" fill="url(#healthBg)"/>

  <!-- Decorative circles -->
  <circle cx="150" cy="100" r="60" fill="#f97316" opacity="0.1"/>
  <circle cx="650" cy="380" r="80" fill="#f97316" opacity="0.08"/>

  <!-- Mobile device frame -->
  <rect x="320" y="60" width="160" height="340" rx="20" fill="#0f172a" stroke="#475569" stroke-width="2"/>
  <rect x="335" y="85" width="130" height="290" rx="8" fill="#1e293b"/>

  <!-- Screen content -->
  <!-- Header -->
  <text x="400" y="110" font-family="system-ui, sans-serif" font-size="12" font-weight="600" fill="#94a3b8" text-anchor="middle">Today's Activity</text>

  <!-- Circular progress -->
  <circle cx="400" cy="180" r="35" fill="none" stroke="#334155" stroke-width="6"/>
  <circle cx="400" cy="180" r="35" fill="none" stroke="#f97316" stroke-width="6"
          stroke-dasharray="175 220" stroke-linecap="round" transform="rotate(-90 400 180)"/>
  <text x="400" y="185" font-family="system-ui, sans-serif" font-size="18" font-weight="700" fill="white" text-anchor="middle">8.2K</text>
  <text x="400" y="198" font-family="system-ui, sans-serif" font-size="8" fill="#94a3b8" text-anchor="middle">steps</text>

  <!-- Stats cards -->
  <rect x="345" y="240" width="50" height="45" rx="6" fill="url(#cardGrad)" stroke="#f97316" stroke-width="1" opacity="0.8"/>
  <text x="370" y="258" font-family="system-ui, sans-serif" font-size="8" fill="#94a3b8" text-anchor="middle">Heart</text>
  <text x="370" y="273" font-family="system-ui, sans-serif" font-size="14" font-weight="700" fill="#f97316" text-anchor="middle">72</text>
  <text x="370" y="282" font-family="system-ui, sans-serif" font-size="7" fill="#94a3b8" text-anchor="middle">bpm</text>

  <rect x="405" y="240" width="50" height="45" rx="6" fill="url(#cardGrad)" stroke="#f97316" stroke-width="1" opacity="0.8"/>
  <text x="430" y="258" font-family="system-ui, sans-serif" font-size="8" fill="#94a3b8" text-anchor="middle">Calories</text>
  <text x="430" y="273" font-family="system-ui, sans-serif" font-size="14" font-weight="700" fill="#f97316" text-anchor="middle">420</text>
  <text x="430" y="282" font-family="system-ui, sans-serif" font-size="7" fill="#94a3b8" text-anchor="middle">kcal</text>

  <!-- Activity graph -->
  <line x1="345" y1="325" x2="455" y2="325" stroke="#334155" stroke-width="1"/>
  <rect x="350" y="310" width="8" height="15" rx="2" fill="#475569"/>
  <rect x="365" y="305" width="8" height="20" rx="2" fill="#475569"/>
  <rect x="380" y="295" width="8" height="30" rx="2" fill="#f97316"/>
  <rect x="395" y="300" width="8" height="25" rx="2" fill="#475569"/>
  <rect x="410" y="290" width="8" height="35" rx="2" fill="#f97316"/>
  <rect x="425" y="308" width="8" height="17" rx="2" fill="#475569"/>
  <rect x="440" y="298" width="8" height="27" rx="2" fill="#f97316"/>

  <!-- Navigation dots -->
  <circle cx="380" cy="355" r="3" fill="#334155"/>
  <circle cx="400" cy="355" r="3" fill="#f97316"/>
  <circle cx="420" cy="355" r="3" fill="#334155"/>

  <!-- Text overlay -->
  <text x="400" y="445" font-family="system-ui, sans-serif" font-size="24" font-weight="700" fill="white" text-anchor="middle">Health Tracker</text>
  <text x="400" y="470" font-family="system-ui, sans-serif" font-size="14" fill="#94a3b8" text-anchor="middle">Mobile · Wellness Monitoring · 2024</text>
</svg>
